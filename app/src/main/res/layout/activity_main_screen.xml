<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/mainscreen" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="364dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="700dp"
        app:srcCompat="@drawable/title" />

    <Button
        android:id="@+id/PlayLocalButton"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="90dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="90dp"
        android:autoText="false"
        android:background="@drawable/playbutton"
        android:checked="true"
        android:enabled="true"
        android:fadeScrollbars="true"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:forceHasOverlappingRendering="true"
        android:foreground="@drawable/playbutton"
        android:showText="false"
        android:splitTrack="false" />

    <Button
        android:id="@+id/howToPlayButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="90dp"
        android:layout_marginTop="620dp"
        android:autoText="false"
        android:background="@drawable/howtoplaybutton"
        android:checked="true"
        android:enabled="true"
        android:fadeScrollbars="true"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:forceHasOverlappingRendering="true"
        android:foreground="@drawable/howtoplaybutton"
        android:showText="false"
        android:splitTrack="false" />

    <Switch
        android:id="@+id/musicSwitch"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="90dp"
        android:autoText="false"
        android:background="@drawable/musicswitch"
        android:checked="true"
        android:enabled="true"
        android:fadeScrollbars="true"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:forceHasOverlappingRendering="true"
        android:foreground="@drawable/musicswitch"
        android:showText="false"
        android:splitTrack="false" />

    <Button
        android:id="@+id/joinButton"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="90dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="90dp"
        android:autoText="false"
        android:background="@drawable/joinbutton"
        android:checked="true"
        android:enabled="true"
        android:fadeScrollbars="true"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:forceHasOverlappingRendering="true"
        android:foreground="@drawable/joinbutton"
        android:showText="false"
        android:splitTrack="false" />
    <Button
        android:id="@+id/hostButton"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="90dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="90dp"
        android:autoText="false"
        android:background="@drawable/hostbutton"
        android:checked="true"
        android:enabled="true"
        android:fadeScrollbars="true"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:forceHasOverlappingRendering="true"
        android:foreground="@drawable/hostbutton"
        android:showText="false"
        android:splitTrack="false" />


</RelativeLayout>
